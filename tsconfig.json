{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["vitest/globals"]
  },
  "include": ["js/**/*.ts", "js/**/__tests__/**/*.ts", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
